! For configuring the look of certain programs,
! namely st and urxvt

! URxvt specific
URxvt.font: xft: Fira Code:size=13:antialias=true
URxvt.boldFont: xft: Ubuntu:size=13style:bold:antialias=true
URxvt.scrollBar:False
URxvt*depth:32
Urxvt*background: [75]#282a36

! St specific
st.font: xos4 Terminus:size=12
st.cursorBlink: true
st.alpha: 0.9

! Everything that uses Xdefaults/Xresources

